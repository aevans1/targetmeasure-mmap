# set up two variables for Phi and Psi dihedral angles 
phi: TORSION ATOMS=5,7,9,15
psi: TORSION ATOMS=7,9,15,17

metad: METAD ARG=phi,psi PACE=200 HEIGHT=0.3 SIGMA=0.2,0.2 biasfactor=20.0 FILE=HILLS GRID_MIN=-pi,-pi GRID_MAX=pi,pi GRID_BIN=128,128
# monitor the two variables and the metadynamics bias potential
PRINT STRIDE=100 ARG=phi,psi,metad.bias FILE=COLVAR_FREE_ENERGY_METAD
